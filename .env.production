# Application
NODE_ENV=production
PORT=3000
APP_URL=https://yourdomain.com
APP_NAME="Hostel Outpass Management System"
APP_SECRET=your_production_app_secret_key_here

# Database
DATABASE_URL=mysql://user:password@db:3306/hostel_outpass
MYSQL_HOST=db
MYSQL_PORT=3306
MYSQL_DATABASE=hostel_outpass
MYSQL_USER=user
MYSQL_PASSWORD=strong_production_password
MYSQL_ROOT_PASSWORD=strong_production_root_password

# Redis
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=strong_production_redis_password

# Email (Resend)
RESEND_API_KEY=re_production_key
EMAIL_FROM=outpass@yourdomain.com
EMAIL_FROM_NAME="Hostel Outpass System"

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your_production_twilio_account_sid
TWILIO_AUTH_TOKEN=your_production_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_MESSAGING_SERVICE_SID=your_production_twilio_messaging_service_sid
MOCK_SMS=false

# Authentication
JWT_SECRET=your_production_jwt_secret_key_here
JWT_EXPIRES_IN=7d
OTP_EXPIRES_IN=10 # minutes
OTP_LENGTH=6

# Storage
UPLOAD_DIR=./public/uploads
MAX_UPLOAD_SIZE=5242880 # 5MB

# Logging
LOG_LEVEL=warn
LOG_FORMAT=combined

# Feature Flags
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PDF_GENERATION=true
ENABLE_BARCODE_GENERATION=true

# Cron Jobs
ENABLE_CRON_JOBS=true
LATE_NOTIFICATION_CRON="*/15 * * * *" # Every 15 minutes
REMINDER_NOTIFICATION_CRON="0 8 * * *" # Every day at 8 AM

# Security
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_WINDOW=15 # minutes
RATE_LIMIT_MAX=100 # requests

# Nginx
NGINX_PORT=80
NGINX_SSL_PORT=443
